generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// pour faire une migration
// $ npx prisma migrate dev --name init

model Users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?  @unique
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(USER)
  profile   String   @default("https://mycloud.barpat.fun/public/assets/Images/Bibliotheque/perso_rpg/elfe.jpg")
}

model Characters {
  id       Int    @id @default(autoincrement())
  name     String
  avatar   String @default("https://mycloud.barpat.fun/public/assets/Images/Bibliotheque/perso_rpg/elfe.jpg")
  pv       Int    @default(10)
  pm       Int    @default(10)
  dex      Int    @default(10)
  constit    Int    @default(10)
  bio      String @default("-")
  typeSlug String 
  type     Type   @relation(fields: [typeSlug], references: [slug])

  @@index([typeSlug])
}

model Type {
  id          Int          @id @default(autoincrement())
  slug        String       @unique
  type        String       @unique
  logo        String?
  Chraracters Characters[]
}

enum Role {
  USER
  MODERATOR
  ADMIN
}
